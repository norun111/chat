.chat-main
  .chat-main__group-info
    .chat-main__group-info-status
      .chat-main__group-info-status-name
        test
      .chat-main__group-info-status-members
        Members : tomoya

    = link_to '#', class:"chat-main__group-info-edit" do
      .chat-main__group-info-edit-btn
        Edit
  .chat-main__message
    = render @messages
    
  .chat-main__message-form
    .input-box
      = form_for [@group, @message] do |f|
        = f.text_field :content, class:'input-text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image', class: 'input-image')
          = f.file_field :image, class: 'input-file'
        = f.submit 'Send', class: 'submit-btn'

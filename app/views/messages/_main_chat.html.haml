.chat-main
  .chat-main__group-info
    .chat-main__group-info-status
      .chat-main__group-info-status-name
        test
      .chat-main__group-info-status-members
        Members : tomoya

    = link_to "#", class:"chat-main__group-info-edit" do
      .chat-main__group-info-edit-btn
        Edit
  .chat-main__message
    .chat-main__message-list
      .chat-main__message-list-nest
        .chat-main__message-list-nest-name
          name
        .chat-main__message-list-nest-time
          time
      .chat-main__message-list-message
        good morning!
  .chat-main__message-form
    .input-box
      %form{:action => "/", :method => "post"}
        %input.input-text{name: "message", placeholder:"type a message"}
        %label{class: "input-box__image"}
          = icon("fas", "image", class:"input-image")
          %input{type: "file", class:"input-file"}
    %input.submit-btn{ type: "submit", value: "send"}
      
      
      
        
    
